@using Application.Employees
@using Domain.Employees.Entities
@using Presentation.Core.Components
@using Presentation.Employers.Pages

@inject NavigationManager nav
@inject IEmployeeService EmployeeServic

@page "/View_Project_Employees_Error/{email}/{projectName}"

@*Navigation footprint *@
@{
    List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Proyectos", href: $"/Projects/{email}"),
        new BreadcrumbItem(@projectName, href: $"/Projects/Details/{email}/{projectName}"),
        new BreadcrumbItem("Empleados", href: $"/View_Project_Employees/{email}/{projectName}")
    };
} 
    <MudIconButton Icon="@Icons.Filled.ArrowBackIos" aria-label="delete"></MudIconButton>
    <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>
    <br />
    <MudText Align="Align.Center" Typo="Typo.h4">No hay empleados contratados en @projectName </MudText>
    <br />
 
   <MudToolBar DisableGutters="true" Class="gap-4">
        <MudButton></MudButton>
        <MudSpacer></MudSpacer>
        <MudButton Variant="Variant.Filled" OnClick="GoToHireEmployee" Color="Color.Secondary">
            <MudText> 
            Contratar empleados
            </MudText> 
        </MudButton>
        <MudSpacer></MudSpacer>
        <MudButton></MudButton>
    </MudToolBar>

@code {
    [Parameter]
    public string projectName { get; set; }

    [Parameter]
    public string email { get; set; }

    private void GoToHireEmployee()
    {
        nav.NavigateTo($"/Hire_Employees/{email}/{projectName}");
    }
}
