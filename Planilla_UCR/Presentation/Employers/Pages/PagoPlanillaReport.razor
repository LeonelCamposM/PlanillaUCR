                        </RowTemplate>
            </MudTable>
                <br>

            <MudTable @ref="@_table" Items="@_templateTableTempList" Striped="true" Bordered="true" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading">
                        <HeaderContent>
