@page "/View_Project_Employees/{email}/{projectName}"
@using Application.Employees
@using Application.People
@using Domain.Employees.Entities
@using Domain.Employees.DTOs
@using Domain.People.Entities
@using Presentation.Employers
@using Presentation.Core.Components
@inject NavigationManager nav
@inject IEmployeeService EmployeeService
@inject IPersonService PersonService

@if(_loading) {
    <MudPaper  Height="220px" Width="100%" Outlined="false" Class="border-none pa-4" Elevation="0">
         <MudText Align="Align.Center" Typo="Typo.h6">
              <MudProgressCircular Color="Color.Secondary" Style="height:70px;width:70px;" Indeterminate="true" />
         </MudText>
       
    </MudPaper>
}else{
    @if (!empty && !_loading)
    {
        List<BreadcrumbItem> _items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Proyecto", href: $"/Projects/{email}"),
            new BreadcrumbItem("Empleados", href: $"/View_Project_Employees/{email}/{projectName}"),
        };

        <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>

        <MudPaper  Height="220px" Width="100%" Outlined="false" Class="border-none pa-4" Elevation="0">
            <MudTable @ref="@_table" Items="@_elements" RowsPerPage="4" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" Filter="new Func<Person,bool>(FilterFunc1)">
                    <ToolBarContent>
                         <MudText Align="Align.Center" Typo="Typo.h6">Empleados de @projectName</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="searchString1" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Email</MudTh>
                        <MudTh>Nombre completo</MudTh>
                        <MudTh>Cedula</MudTh>
                    </HeaderContent>

                    <RowTemplate>
                        <MudTd DataLabel="Email">@context.Email</MudTd>
                        <MudTd DataLabel="Nombre">@context.Name @context.LastName1 @context.LastName2</MudTd>
                        <MudTd DataLabel="Cedula">@context.Ssn</MudTd>

                    </RowTemplate>
                <PagerContent>
                    <MudPagination SelectedChanged="PageChanged" Count="@((_table.GetFilteredItemsCount() + _table.RowsPerPage - 1) / _table.RowsPerPage)" Color="Color.Secondary" Class="pa-4"/>
                </PagerContent>
            </MudTable>
        </MudPaper>
    }
    else
    {
        GoToViewError();
    }
}

@code {
    private bool _hidePosition;
    private bool _loading = true;
    private bool empty = true;
    string searchString1 = "";
    private IEnumerable<Person> _elements = new List<Person>();
    private MudTable<Person> _table;
    [Parameter]
    public string projectName { get; set; }
    [Parameter]
    public string email { get; set; }

    protected override async Task OnInitializedAsync()
    {

        _elements = await PersonService.GetProjectEmployees(projectName);
        if (_elements.Length() == 0)
        {
            empty = true;
        }
        else
        {
            empty = false;
        }
        _loading = false;
    }

    private void GoToViewError()
    {
       nav.NavigateTo($"/View_Project_Employees_Error/{email}/{projectName}");
    }

    private void PageChanged(int i)
    {
        _table.NavigateTo(i - 1);
    }

    private bool FilterFunc1(Person element) => FilterFunc(element, searchString1);

    private bool FilterFunc(Person element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
