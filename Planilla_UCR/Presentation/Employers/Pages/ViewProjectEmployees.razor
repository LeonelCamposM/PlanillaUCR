@page "/View_Project_Employees/{email}/{projectName}"
@using Application.Employees
@using Application.People
@using Domain.Employees.Entities
@using Domain.Employees.DTOs
@using Domain.People.Entities
@using Presentation.Employers
@using Presentation.Core.Components
@using Presentation.Employers.Components
@inject NavigationManager nav
@inject IEmployeeService EmployeeService
@inject IPersonService PersonService

@if (selectedWindow)
{
    <HireEmployeesTable email="@email" projectName="@projectName" SendAuthenticationState="ReceiveTabState"></HireEmployeesTable>
}
else
{
   <HiredEmployeesTable  email="@email" projectName="@projectName" SendAuthenticationState="ReceiveTabState"></HiredEmployeesTable>
}

@code {
    [Parameter]
    public string projectName { get; set; }
    [Parameter]
    public string email { get; set; }

    private bool selectedWindow = true;

    public EventCallback<string> conmuteWindow => EventCallback.Factory.Create<string>(this, ReceiveTabState);

    private void GoToViewError()
    {
       nav.NavigateTo($"/View_Project_Employees_Error/{email}/{projectName}");
    }

     public void ReceiveTabState()
    {
        selectedWindow = !selectedWindow;
    }
}
