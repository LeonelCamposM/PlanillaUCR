@using Application.Employees
@using Domain.Employees.Entities
@using Presentation.Core.Components

@inject NavigationManager nav
@inject IEmployeeService EmployeeServic

@*Navigation footprint *@
@{
    List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Projectos", href: $"/Projects/{email}"),
        new BreadcrumbItem(@projectName, href: $"/Projects/Details/{email}/{projectName}"),
        new BreadcrumbItem("Empleados", href: $"/View_Project_Employees/{email}/{projectName}"),
    };
}
    <MudBreadcrumbs Items="_items" Separator=">"></MudBreadcrumbs>
    <br />
    <MudText Align="Align.Center" Typo="Typo.h4">No hay empleados registrados</MudText>
    <br />
 
   <MudToolBar DisableGutters="true" Class="gap-4">
        <MudButton></MudButton>
        <MudSpacer></MudSpacer>
        @*Create button *@
        <MudButton Variant="Variant.Filled" OnClick="GoToCreateEmployee" Color="Color.Secondary">
            <MudText> 
            Registrar empleado
            </MudText> 
        </MudButton>
        <MudSpacer></MudSpacer>
        <MudButton></MudButton>
    </MudToolBar>

@code {
    [Parameter]
    public string email {get; set;}
    [Parameter]
    public string projectName {get; set;}

   private void GoToCreateEmployee()
    {
        nav.NavigateTo($"/Create_Employee/{email}/{projectName}");
    }
}
