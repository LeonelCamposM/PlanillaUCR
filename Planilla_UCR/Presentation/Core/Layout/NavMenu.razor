@using Application.ContextMenu
@using  Presentation.Core.Components
@inject IContextMenuService ContextMenuService
@inject NavigationManager nav

<AuthorizeView Roles="Employer">
    <Authorized>
        @if (!ContextMenuService.GetShowProjectsMenu())
        { 
            <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.Home" Color="@Color.Secondary" Class="mr-2"/>
                            <span aria-hidden="true"></span> Inicio
                        </NavLink>
                    </li>

                     <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.CreditScore" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Pagos
                            <MudSpacer></MudSpacer>
                        </NavLink>
                     </li>

                      <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.Article" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Informes
                            <MudSpacer></MudSpacer>
                        </NavLink>
                     </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                             <MudIconButton Icon="@Icons.Filled.BusinessCenter" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Proyectos
                        </NavLink>
                    </li>

                    
                </ul>
            </div>
        }
        else
        {
            string projectName = ContextMenuService.GetProjectsContext();
            <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.Home" Color="@Color.Secondary" Class="mr-2"/>
                            <span aria-hidden="true"></span> Inicio
                        </NavLink>
                    </li>

                     <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.CreditScore" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Pagos
                            <MudSpacer></MudSpacer>
                        </NavLink>
                     </li>

                      <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.Article" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Informes
                            <MudSpacer></MudSpacer>
                        </NavLink>
                     </li>

                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                             <MudIconButton Icon="@Icons.Filled.BusinessCenter" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> Proyectos
                        </NavLink>
                    </li>

            
                    @if (_isExpanded)
                    {
                        <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.CardTravel" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> @projectName
                            <MudSpacer></MudSpacer>
                            <MudIconButton Size="Size.Medium"  @onclick="()=>_isExpanded = !_isExpanded" Icon="@Icons.Material.Filled.ArrowDropUp" Color="Color.Secondary"></MudIconButton>
                        </NavLink>
                        </li>
                        <li class="nav-item px-3">
                        <TabNavLink Icon="@Icons.Material.Filled.Assignment" href="@($"Projects/{email}/{projectName}/Configurations")" text="Detalles"></TabNavLink>
                        </li>

                        <li class="nav-item px-3">  
                            <TabNavLink Icon="@Icons.Material.Filled.People" href="@($"/View_Project_Employees/{email}/{projectName}")" text="Empleados"></TabNavLink>
                        </li>

                        <li class="nav-item px-3">
                            <TabNavLink  Icon="@Icons.Material.Filled.CardMembership" href="@($"/Projects/{email}/{projectName}/Deductions")" text="Deducciones"></TabNavLink>
                        </li>

                        <li class="nav-item px-3">
                            <TabNavLink  Icon="@Icons.Material.Filled.CardGiftcard" href="@($"/Projects/{email}/{projectName}/Benefits")" text="Beneficios"></TabNavLink>
                        </li>
 
                    }
                    else
                    {
                        <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                            <MudIconButton Icon="@Icons.Filled.CardTravel" Color="@Color.Secondary" Class="mr-2"/>
                            <span  aria-hidden="true"></span> @projectName
                            <MudSpacer></MudSpacer>
                            <MudIconButton @onclick="()=>_isExpanded = !_isExpanded"Size="Size.Medium" Icon="@Icons.Material.Filled.ArrowDropDown" Color="Color.Secondary"></MudIconButton>
                        </NavLink>
                        </li>
                
                    }
                </ul>
            </div>
        }
    </Authorized>
    <NotAuthorized>
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="Employee">
    <Authorized>
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            @if (!ContextMenuService.GetShowProjectsMenu())
            { 
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <MudIconButton Icon="@Icons.Filled.Home" Color="@Color.Secondary" Class="mr-2"/>
                    <span aria-hidden="true"></span> Inicio
                    </NavLink>
                </li>

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <MudIconButton Icon="@Icons.Filled.BusinessCenter" Color="@Color.Secondary" Class="mr-2"/>
                    <span  aria-hidden="true"></span> Proyectos
                    </NavLink>
                </li>
            }
            else
            {
                string projectName = ContextMenuService.GetProjectsContext();
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <MudIconButton Icon="@Icons.Filled.Home" Color="@Color.Secondary" Class="mr-2"/>
                    <span aria-hidden="true"></span> Inicio
                </NavLink>
                </li>

                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <MudIconButton Icon="@Icons.Filled.BusinessCenter" Color="@Color.Secondary" Class="mr-2"/>
                    <span  aria-hidden="true"></span> Proyectos
                    </NavLink>
                </li>
            
                @if (_isExpanded)
                {
                    <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                        <MudIconButton Icon="@Icons.Filled.CardTravel" Color="@Color.Secondary" Class="mr-2"/>
                        <span  aria-hidden="true"></span> @projectName
                        <MudSpacer></MudSpacer>
                        <MudIconButton Size="Size.Medium"  @onclick="()=>_isExpanded = !_isExpanded" Icon="@Icons.Material.Filled.ArrowDropUp" Color="Color.Secondary"></MudIconButton>
                        </NavLink>
                    </li>

                    <li class="nav-item px-3">
                        <TabNavLink Icon="@Icons.Filled.MoreTime" href="@($"/Projects/ReportHours/{"leonel@ucr.ac.cr"}/{projectName}/{email}")" text="Reportes"></TabNavLink>
                    </li>
                }
                else
                {
                    <li class="nav-item px-3">   
                        <NavLink class="nav-link" Match="NavLinkMatch.All">
                        <MudIconButton Icon="@Icons.Filled.CardTravel" Color="@Color.Secondary" Class="mr-2"/>
                        <span  aria-hidden="true"></span> @projectName
                        <MudSpacer></MudSpacer>
                        <MudIconButton @onclick="()=>_isExpanded = !_isExpanded"Size="Size.Medium" Icon="@Icons.Material.Filled.ArrowDropDown" Color="Color.Secondary"></MudIconButton>
                        </NavLink>
                    </li>
                }
            }
        </ul>
    </div>
    </Authorized>
    <NotAuthorized>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;
    bool _isExpanded = true;

    [Parameter]
    public string email { get; set; }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        ContextMenuService.SetOnChange(StateHasChanged);
    }
}
