<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </li>

         <li class="nav-item px-3">
            <NavLink class="nav-link" href=@($"Employer_Profile/{email}") Match="NavLinkMatch.Prefix">
                <span class="fas fa-hockey-puck pr-3" aria-hidden="true"></span>
                Perfil Empleador
            </NavLink>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span  aria-hidden="true"></span> Aprobar pagos
            </NavLink>
            <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                <span  aria-hidden="true"></span> Proyectos
            </NavLink>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span  aria-hidden="true"></span> informes
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    [Parameter]
    public string email { get; set; }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }


}
