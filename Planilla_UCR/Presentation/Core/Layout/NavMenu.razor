@using Application.ContextMenu
@inject IContextMenuService ContextMenuService
@inject NavigationManager nav

@if (!ContextMenuService.GetShowProjectsMenu())
{ 
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Inicio
                </NavLink>
            </li>

            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Proyectos
                </NavLink>
            </li>
        </ul>
    </div>
}
else
{
    string projectname = ContextMenuService.GetProjectsContext();
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href=@("/") Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Inicio
                </NavLink>
            </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/{email}") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Proyectos
                </NavLink>
            </li>

            
            @if (_isExpanded)
            {
                <li class="nav-item px-3">   
                <NavLink class="nav-link" Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> @projectname
                    <MudSpacer></MudSpacer>
                     <MudIconButton Size="Size.Medium"  @onclick="()=>_isExpanded = !_isExpanded" Icon="@Icons.Material.Filled.ArrowDropUp" Color="Color.Secondary"></MudIconButton>
                </NavLink>
                </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"Projects/{email}/{projectname}/Configurations") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Detalles
                </NavLink>
                </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"/Projects/{email}/{projectname}/Deductions") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Deducciones voluntarias
                </NavLink>
                </li>

                <li class="nav-item px-3">
                <NavLink class="nav-link" href=@($"/Projects/{email}/{projectname}/Benefits") Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> Beneficios
                </NavLink>
                </li>
            }
            else
            {
                <li class="nav-item px-3">   
                <NavLink class="nav-link" Match="NavLinkMatch.All">
                    <span  aria-hidden="true"></span> @projectname
                    <MudSpacer></MudSpacer>
                    <MudIconButton @onclick="()=>_isExpanded = !_isExpanded"Size="Size.Medium" Icon="@Icons.Material.Filled.ArrowDropDown" Color="Color.Secondary"></MudIconButton>
                </NavLink>
                </li>
                
            }
        </ul>
    </div>
}

@code {
    private bool collapseNavMenu = true;
    bool _isExpanded = true;

    [Parameter]
    public string email { get; set; }

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override async Task OnInitializedAsync()
    {
        ContextMenuService.SetOnChange(StateHasChanged);
    }
}
