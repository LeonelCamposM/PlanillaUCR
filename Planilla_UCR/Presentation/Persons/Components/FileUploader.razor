@inject ISnackbar Snackbar

<MudPaper @ondragenter="@SetDragClass" @ondragleave="@ClearDragClass" @ondragend="@ClearDragClass"  Weight="100px" Height="100px" Outlined="true" Class="@DragClass">
    @if (!Clearing)
    {
        <InputFile OnChange="OnInputFileChanged" multiple  class="absolute mud-width-full mud-height-full overflow-hidden z-2" style="opacity:0;" />
    }
    <MudText Typo="Typo.h6">Arrastra la imagen, o haz click aquí</MudText>
    @foreach (var file in fileNames)
    {
        <MudChip Color="Color.Dark" Text="@file" />
    }
</MudPaper>

<MudToolBar DisableGutters="true" Class="gap-4">
 <MudSpacer></MudSpacer>
<MudButton OnClick="Upload" Disabled="@(!fileNames.Any())" Color="Color.Secondary" Variant="Variant.Filled" class= "align-center">Subir</MudButton>
<MudSpacer></MudSpacer>
<MudButton OnClick="Clear" Disabled="@(!fileNames.Any())" Color="Color.Error" Variant="Variant.Filled" class= "align-center">Limpiar</MudButton>
<MudSpacer></MudSpacer>
</MudToolBar>



